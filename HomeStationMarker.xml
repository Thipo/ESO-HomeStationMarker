  4. Copy to clipboard.
  5. Paste into large field, replacing any previous text.
  ">
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPRIGHT"
            point="TOPRIGHT"
            offsetX="-5"
            offsetY="100" />
          <Anchor relativeTo="$(parent)"
            relativePoint="BOTTOMRIGHT"
            point="BOTTOMRIGHT"
            offsetX="-5"
            offsetY="-5" />
          <Dimensions x="350" y="100" />
        </Label>
 -->
        <Backdrop
          tier="HIGH"
          inherits="ZO_EditBackdrop">
          <Dimensions x="60"/>
          <Anchor point="TOPLEFT"
            relativeTo="$(parent)"
            relativePoint="TOPLEFT"
            offsetX="-5"
            offsetY="100" />
          <Anchor point="BOTTOMRIGHT"
            relativeTo="$(parent)"
            relativePoint="BOTTOMRIGHT"
            offsetX="-5"
            offsetY="0" />
          <Controls>
            <EditBox name="HomeStationMarker_Export_Edit"
              inherits="ZO_DefaultEditMultiLineForBackdrop ZO_EditDefaultText"
              textType="ALL"
              maxInputCharacters="28000">

              <OnInitialized>
                ZO_EditDefaultText_Initialize(self, "")
              </OnInitialized>
              <OnTextChanged>
                HomeStationMarker_Export_OnTextChanged(self:GetText())
              </OnTextChanged>
            </EditBox>
          </Controls>
        </Backdrop>

      </Controls>
    </TopLevelControl>
  </Controls>
</GuiXml>
